# Backend Environment Variables

# API Configuration
# For symptom checker backend (FastAPI on port 8000)
VITE_SYMPTOM_API_URL=http://localhost:8000

# For main backend (Flask on port 5001)
VITE_API_URL=http://localhost:5001

# ChromaDB Configuration
# Path where ChromaDB will store vector embeddings
# For production: /opt/medsense/backend/chroma_db
# For development: ./chroma_db
CHROMA_DB_PATH=./chroma_db

# Database Configuration (for Cloud SQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medsense_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# OpenAI/LLM Configuration
OPENAI_API_KEY=your_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo
